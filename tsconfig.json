{
  "compilerOptions": {
    "outDir": "es",
    "target": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2020",
      "dom"
    ],
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
